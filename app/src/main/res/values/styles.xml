    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000</item>
    </style>

    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AccentTextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <style name="EditTextTheme" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:textColorHighlight">@color/colorAccent</item>

    </style>

    <style name="CheckedChipColor" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NotCheckedChipColor" parent="Widget.MaterialComponents.Chip.Choice" />

    <style name="RoundedCornerEditText">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:background">@drawable/edit_text_shape</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="counterText">
        <item name="android:textColor">#0000</item>
    </style>

    <style name="counterOverride">
        <item name="android:textColor">#ff0000</item>
    </style>


    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:elevation" tools:targetApi="lollipop">8dp
        </item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/colorAccent</item>
    </style>


    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:elevation" tools:targetApi="lollipop">8dp
        </item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RateButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/rateBtnBackgroundColor</item>
        <item name="android:elevation" tools:targetApi="lollipop">8dp
        </item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">@color/rateBtnTextColor</item>
    </style>

    <style name="ReviewButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/reviewBackColor</item>
        <item name="android:elevation" tools:targetApi="lollipop">8dp
        </item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">@color/reviewAccentColor</item>
    </style>

    <style name="FollowButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/reviewAccentColor</item>
        <item name="android:elevation" tools:targetApi="lollipop">8dp
        </item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:titleTextColor" tools:targetApi="m">@color/colorAccent
        </item>

        <item name="android:elevation" tools:targetApi="lollipop">8dp
        </item>
    </style>

    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>


    <style name="RoundedButton" parent="Widget.AppCompat.Button">
        <item name="iconTint">@color/iconButtonColor</item>
        <item name="android:radius">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/iconButtonBackColor</item>
    </style>


