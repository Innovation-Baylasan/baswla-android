    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="RoundedCornerEditText">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:background">@drawable/edit_text_shape</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:maxLines">1</item>

    </style>


    <style name="AppButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="elevation" >0dp</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RateButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/rateBtnBackgroundColor</item>
        <item name="elevation" >0dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">@color/rateBtnTextColor</item>
    </style>


    <style name="Widget.MaterialComponents.Button.UnelevatedButton.navigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/neo_sans_arabic_regular</item>
        <item name="android:gravity">center|start</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconSize">22dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>


