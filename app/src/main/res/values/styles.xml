    <style name="SelectableChip" parent="@style/Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:checkableBehavior">single</item>
    </style>
    <style name="Outlined" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="chipStrokeColor">@android:color/darker_gray</item>
        <item name="chipStrokeWidth">0.5dp</item>

    </style>


