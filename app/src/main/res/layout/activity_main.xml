<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ui.main.MainActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            style="@style/Widget.MaterialComponents.BottomNavigationView.Colored"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            app:itemIconTint="@color/bottom_sheet_color_state"
            app:itemTextColor="@color/bottom_sheet_color_state"
            app:menu="@menu/bottom_navigation_menu" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="56dp" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"

        android:fitsSystemWindows="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/navigation_header_layout" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/openPlacesButton"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton.navigation"
                    android:drawableStart="@drawable/ic_my_places"
                    android:text="Places"
                    app:cornerRadius="0dp"
                    app:icon="@drawable/ic_my_places"
                    app:iconPadding="16dp"
                    app:iconSize="30dp" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton.navigation"
                    android:drawableStart="@drawable/ic_my_events"
                    android:text="Events"
                    app:cornerRadius="0dp"
                    app:icon="@drawable/ic_my_places"
                    app:iconPadding="16dp"
                    app:iconSize="30dp" />


                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton.navigation"
                    android:drawableStart="@drawable/ic_faq"
                    android:text="FAQ"
                    app:cornerRadius="0dp"
                    app:icon="@drawable/ic_faq"
                    app:iconPadding="16dp"
                    app:iconSize="30dp" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton.navigation"
                    android:drawableStart="@drawable/ic_about"
                    android:text="About"
                    app:cornerRadius="0dp"
                    app:icon="@drawable/ic_about"
                    app:iconPadding="16dp"
                    app:iconSize="30dp" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton.navigation"
                    android:drawableStart="@drawable/ic_share"
                    android:text="Share App"
                    app:cornerRadius="0dp"
                    app:icon="@drawable/ic_share"
                    app:iconPadding="16dp"
                    app:iconSize="30dp" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/actionPrivacyButton"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton.navigation"
                    android:drawableStart="@drawable/ic_share"
                    android:text="@string/privacy_policy"
                    app:cornerRadius="0dp"
                    app:icon="@drawable/ic_share"
                    app:iconPadding="16dp"
                    app:iconSize="30dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tosButton"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton.navigation"
                    android:drawableStart="@drawable/ic_share"
                    android:text="@string/terms_of_use"
                    app:cornerRadius="0dp"
                    app:icon="@drawable/ic_share"
                    app:iconPadding="16dp"
                    app:iconSize="30dp" />
            </LinearLayout>
        </ScrollView>

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>