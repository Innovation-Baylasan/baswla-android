<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="0dp"
    android:layout_margin="0dp"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profileCoverImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:background="@color/GhostWhite"
 />

            <ImageView
                android:layout_marginTop="90dp"
                android:layout_gravity="bottom|center"
                android:id="@+id/profileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                app:layout_anchor="@+id/nestedScrollView"
                app:layout_anchorGravity="top|center"
                app:srcCompat="@drawable/ic_icon" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginBottom="30dp"

android:layout_gravity="center|bottom"
                app:backgroundTint="#0E5AB0"
                app:layout_anchor="@+id/nestedScrollView"
                app:srcCompat="@drawable/ic_bell" />
        </FrameLayout>

        <TextView
            android:id="@+id/companyNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_up_week_end"
            android:fontFamily="@font/neo_sans_arabic_bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/companyDescrition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"

            android:text="@string/sample_descripition" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/viewMoreButton"
            style="@style/AppButton"
            app:cornerRadius="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/neo_sans_arabic_bold"
            android:text="View more !!"
            app:elevation="0dp" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>