                android:layout_marginBottom="8dp"
                android:valueFrom="0"
                android:valueTo="10"
                app:thumbColor="@color/colorAccent"
                app:trackColor="#F5f5f5" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

